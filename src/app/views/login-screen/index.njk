{% extends 'layout.njk' %}

{% block content_before %}
  <div class="col-xs-12">
    <div class="row">
      <div class="alert_login" {{ display }}>
        {% if fields %}
          <div class="alert alert-success" role="alert">
            VocÃª foi logado com sucesso
          </div>
        {% else %}
          <div class="alert alert-danger" role="alert">
            Digite seu email e senha
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="col-xs-12">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4 col-xs-12">
        <div class="row">
          <div class="box-login">
            <div class="paper_login paper_login--first">
              <div class="paper_login paper_login--second">
                <div class="paper_login paper_login--tirdh">
                  <h1>Entrar na minha conta</h1>
                  <form method="POST">
                    <div class="form-group">
                      <input
                        id="user_email"
                        class="form-control user user_email"
                        type="email"
                        name="email"
                        placeholder="Email"
                      >
                      <span>user</span>
                    </div>
                    <div class="form-group">
                      <input
                        id="user_password"
                        class="form-control user user_password"
                        type="password"
                        name="password"
                        placeholder="Senha"
                      >
                      <span>password</span>
                    </div>
                    <button type="submit" class="btn btn-primary">
                      Entrar
                      <span>Login</span>
                    </button>
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" id="dropdownCheck">
                      <label class="form-check-label" for="dropdownCheck">
                        Mantenha-me conectado
                      </label>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>
{% endblock %}

{% block content_after %}
  <div class="col-xs-12">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8 col-xs-12">
        <div class="row">
          <div class="action-links">
            <u>Precisa e uma conta? <a href="#">Inscrever-se</a></u>
            <p>Esqueceu sua senha? <a href="#">Clique aqui.</a></p>

            <div class="box-informations">
              <div>i</div>
              <div>Keyrus</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
{% endblock %}
